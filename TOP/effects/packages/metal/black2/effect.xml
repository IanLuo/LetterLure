<effect>
    <fillPattern alpha="1">
        <patternArray>
			<pattern type="1" width="50" height="50" alpha="1">
                <imagePatternPath>metal_floor.png</imagePatternPath>
            </pattern>
        </patternArray>
        <gradient type="0"> <!-- 1 for radial, 0 for line -->
		   <gradientValue red="0" green="0" blue="0" alpha="0.8" location="0.0"/>
		   <gradientValue red="128" green="128" blue="128" alpha="1" location="0.23"/>
		   <gradientValue red="3" green="5" blue="5" alpha="0.8" location="0.36"/>
		   <gradientValue red="128" green="128" blue="128" alpha="1" location="0.49"/>
		   <gradientValue red="1" green="1" blue="1" alpha="0.8" location="0.59"/>
		   <gradientValue red="254" green="254" blue="254" alpha="1" location="0.72"/>
		   <gradientValue red="11" green="16" blue="16" alpha="0.8" location="1"/>
		   <lineGradientAttrs angle="0"/>
	   </gradient>
    </fillPattern>

    <strokePattern alpha="1">
		<strokeGradient type="0">
			<strokeGradientValue red="0" green="0" blue="0" alpha="1" location="0.0"/>
			<strokeGradientValue red="128" green="128" blue="128" alpha="1" location="0.23"/>
			<strokeGradientValue red="3" green="5" blue="5" alpha="1" location="0.36"/>
			<strokeGradientValue red="128" green="128" blue="128" alpha="1" location="0.49"/>
			<strokeGradientValue red="1" green="1" blue="1" alpha="1" location="0.59"/>
			<strokeGradientValue red="254" green="254" blue="254" alpha="1" location="0.72"/>
			<strokeGradientValue red="11" green="16" blue="16" alpha="1" location="1"/>
			<lineStrokeGradientAttrs angle="180"/>
		</strokeGradient>
    </strokePattern>
		
    <strokeWidthPercent value="0.04"/>
    <shadowColor red="0" green="0" blue="0" alpha="0"/>
    <shadowOffset widthPercentage="0.01" heightPercentage="0.01"/>
    <shadowBlur value="0"/>
</effect>